@model IEnumerable<SiteWebStore.Models.tbProduct>

@{
    ViewBag.Title = "Product Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Inventory</h2>

<p>
    @Html.ActionLink("Create New Product", "CreateProduct")
</p>
<table class="table">
    <tr>
        <th>
            Code
        </th>
        <th>
            Name
        </th>
        <th>
            Stock
        </th>
        <th>
            Discount <strong><b>(%)</b></strong>
        </th>
        <th>
            Internal Price
        </th>
        <th>
            Public Price
        </th>
        <th>
            Brand
        </th>
        <th>
            Provider
        </th>
        <th>
           Unit Revenue
        </th>
        <th>
            Total Revenue
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InternalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicPrice)
        </td>
        <td>
            @SiteWebStore.Controllers.BrandsController.BrandName(item.IdBrand)
        </td>
        <td>
            @SiteWebStore.Controllers.ProvidersController.ProviderName(item.IdProvider)
        </td>
        <td>
            @SiteWebStore.Controllers.ProductsController.UnitRevenue(item.PublicPrice, item.InternalPrice, item.Discount)
        </td>
        <td>
            @SiteWebStore.Controllers.ProductsController.TotalRevenue(item.PublicPrice, item.InternalPrice, item.Discount, item.Stock)
        </td>
        <td>
            @Html.ActionLink("Product Details", "ProductDetails", new { id=item.Id })
        </td>
    </tr>
}

</table>
